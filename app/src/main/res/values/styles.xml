    <!--Logo Style-->
    <style name="StyleTextViewLogo">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:text">@string/logo_wholesale</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/font_30sp</item>
        <item name="android:layout_marginTop">@dimen/dimen_20dp</item>
    </style>


    <!--Title Style-->
    <style name="StyleTextViewTitle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:text">@string/title_wholesale</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/font_14sp</item>
        <item name="android:fontFamily">@font/muli</item>
    </style>

    <!--Label White-->
    <style name="StyleTextViewLabelSearchType">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/font_15sp</item>
        <item name="android:fontFamily">@font/muli</item>
        <item name="android:paddingStart">@dimen/dimen_44dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginTop">@dimen/dimen_10dp</item>
    </style>

    <!-- Row Button Dropdown-->
    <style name="StyleTextViewSearchDropDown">
        <item name="android:textColor">@color/colorPageHeader</item>
        <item name="android:layout_height">@dimen/dimen_35dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/bg_button_dropdown</item>
        <item name="android:textSize">@dimen/dimen_15dp</item>
        <item name="android:fontFamily">@font/muli</item>
        <item name="android:paddingStart">@dimen/dimen_19dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">left|center_vertical</item>
        <!--<item name="android:textColorHint">@color/color_hint_grey</item>-->
    </style>

    <!-- Button Dropdown-->
    <style name="StyleTextViewSearchBtnDropdown">
        <item name="android:layout_height">@dimen/dimen_35dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginEnd">@dimen/dimen_25dp</item>
        <item name="android:layout_marginStart">@dimen/dimen_25dp</item>
        <item name="android:layout_marginTop">@dimen/dimen_5dp</item>
    </style>

    <!--Login Button -->
    <style name="StyleButtonLogin">
        <item name="android:textColor">@color/colorPageHeader</item>
        <item name="android:layout_height">@dimen/dimen_35dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textSize">@dimen/font_15sp</item>
        <item name="android:fontFamily">@font/muli</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
    </style>

    <!--<buy now button>-->
    <style name="StyleButtonBuyNow">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_height">@dimen/dimen_35dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/font_15sp</item>
        <item name="android:fontFamily">@font/muli</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="StyleButtonNavigation">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_45dp</item>
        <item name="android:background">@drawable/bg_button_drawer</item>
        <item name="android:drawableRight">@drawable/ic_arrow_nav_drawer</item>
        <item name="android:fontFamily">@font/muli</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorNavMenuText</item>
        <item name="android:textSize">@dimen/font_13sp</item>
    </style>

    <style name="StyleButtonFilter">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/dimen_35dp</item>
        <item name="android:drawablePadding">@dimen/dimen_3dp</item>
        <item name="android:fontFamily">@font/muli</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorNavMenuText</item>
        <item name="android:textSize">@dimen/font_15sp</item>
    </style>

    <style name="StyleRadioButtonAddress">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/dimen_35dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/bg_rb_address</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/bg_rb_text_address</item>
        <item name="android:textSize">@dimen/font_15sp</item>
        <item name="android:fontFamily">@font/muli</item>
    </style>

    <style name="StyleTextViewLabelOrder">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:fontFamily">@font/muli</item>
        <item name="android:textColor">@color/colorNavMenuText</item>
        <item name="android:textSize">@dimen/font_17sp</item>
    </style>

    <style name="StyleTextViewLabelOrderLight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/muli</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/colorNavMenuCredit</item>
        <item name="android:textSize">@dimen/font_13sp</item>
    </style>

    <style name="StyleTextViewLabelLightOrange">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/muli</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/colorQuantityCount</item>
        <item name="android:textSize">@dimen/font_22sp</item>
    </style>

    <style name="StyleTextViewLabelOrange">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/muli</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/font_13sp</item>
    </style>

    <style name="StyleTextViewPriceOrange">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/muli</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/font_13sp</item>
    </style>

    <!--<progress dialog style>-->
    <style name="StyleProgressDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>

    </style>


    <!--Toast style-->
    <style name="StyleToast">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/font_12sp</item>
        <item name="android:fontFamily">@font/muli</item>
    </style>

</resources>
