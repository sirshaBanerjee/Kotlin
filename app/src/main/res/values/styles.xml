<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--<style for page headers>-->
    <style name="StylePageHeader">
        <item name="android:textSize">@dimen/font_15sp</item>
        <item name="android:layout_height">@dimen/dimen_35dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/muli</item>
        <item name="android:textColor">@color/colorPageHeader</item>
    </style>

    <!--<style for grey edittext>-->
    <style name="StyleEdittextHintGrey">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:fontFamily">@font/muli</item>
        <item name="android:layout_marginStart">@dimen/dimen_20dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_15dp</item>
        <item name="android:textColor">@color/colorPageHeader</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/font_15sp</item>
    </style>

    <style name="StyleRowTextNormal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorLabelGrey</item>
        <item name="android:fontFamily">@font/muli</item>
        <item name="android:textSize">@dimen/font_12sp</item>
        <item name="android:padding">@dimen/dimen_10dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!--<style for grey textview>-->
    <style name="StyleTextViewGrey">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_15sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingStart">@dimen/dimen_44dp</item>
        <item name="android:fontFamily">@font/muli</item>
        <item name="android:layout_marginTop">@dimen/dimen_10dp</item>
        <item name="android:textColor">@color/colorLabelGrey</item>
    </style>

    <!--<style for small grey text>-->
    <style name="StyleTextViewGreySmall">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/muli</item>
        <item name="android:textColor">@color/colorLabelGrey</item>
        <item name="android:textSize">@dimen/font_10sp</item>
    </style>

    <!--<style for orange background texts>-->
    <style name="StyleTextViewOrangeNormal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_35dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/font_15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/muli</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">true</item>
    </style>

