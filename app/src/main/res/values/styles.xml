    <!--<edit text background for all the edit text fields>-->
    <style name="StyleEditTextWhiteBg">
        <item name="android:layout_height">@dimen/dimen_35dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginEnd">@dimen/dimen_25dp</item>
        <item name="android:layout_marginStart">@dimen/dimen_25dp</item>
        <item name="android:layout_marginTop">@dimen/dimen_10dp</item>
        <item name="android:background">@drawable/drawable_round_edittext_bg</item>
    </style>

    <style name="StyleTextViewgreyNormal">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">@font/muli</item>
        <item name="android:textSize">@dimen/font_13sp</item>
    </style>

    <style name="StyleTextViewTimelineGrey">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:fontFamily">@font/muli</item>
        <item name="android:textSize">@dimen/font_15sp</item>
    </style>

