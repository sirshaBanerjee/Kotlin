<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    tools:cardElevation="@dimen/dimen_3dp">

    <RelativeLayout
        android:id="@+id/row_product_list_rlProductList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_5dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/row_product_list_ivProductImage"
            android:layout_width="@dimen/dimen_80dp"
            android:layout_height="@dimen/dimen_80dp"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="@dimen/dimen_10dp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/row_product_list_tvProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/row_product_list_ivProductImage"
            android:layout_toEndOf="@id/row_product_list_ivProductImage"
            android:ellipsize="end"
            android:fontFamily="@font/muli"
            android:lines="1"
            android:textColor="@color/colorNavMenuText"
            android:textSize="@dimen/font_17sp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/row_product_list_tvProductNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/row_product_list_tvProductName"
            android:layout_toEndOf="@id/row_product_list_ivProductImage"
            android:ellipsize="end"
            android:fontFamily="@font/muli"
            android:lines="1"
            android:textColor="@color/colorNavMenuCredit"
            android:textSize="@dimen/font_13sp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/row_product_list_tvProductPrice"
            style="@style/StyleTextViewPriceOrange"
            android:layout_alignBottom="@id/row_product_list_ivProductImage"
            android:layout_gravity="bottom"
            android:layout_toEndOf="@id/row_product_list_ivProductImage" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/row_product_list_tvProductDiscountedPrice"
            style="@style/StyleTextViewPriceOrange"
            android:layout_alignBottom="@id/row_product_list_ivProductImage"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/dimen_15dp"
            android:layout_toEndOf="@id/row_product_list_tvProductPrice" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/row_product_list_tvProductDiscount"
            style="@style/StyleTextViewPriceOrange"
            android:layout_alignBottom="@id/row_product_list_ivProductImage"
            android:layout_alignParentEnd="true"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/dimen_15dp"
            android:layout_toEndOf="@id/row_product_list_tvProductDiscountedPrice"
            android:gravity="end" />
    </RelativeLayout>
</android.support.v7.widget.CardView>