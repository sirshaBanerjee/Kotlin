<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorCommonBg"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp">

        <include layout="@layout/toolbar_home" />

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/fragment_search_tvBrand"
        style="@style/StyleTextViewLabelSearchType"
        android:text="@string/label_car_brand" />


    <animation.indianic.com.kotlinmaster.customcomponents.CustomDropdownButton
        android:id="@+id/fragment_search_bvCarBrand"
        style="@style/StyleTextViewSearchBtnDropdown"
        app:button_hint="@string/hint_car_brand" />


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/fragment_search_tvModel"
        style="@style/StyleTextViewLabelSearchType"
        android:text="@string/label_car_model" />

    <animation.indianic.com.kotlinmaster.customcomponents.CustomDropdownButton
        android:id="@+id/fragment_search_bvCarModel"
        style="@style/StyleTextViewSearchBtnDropdown"
        app:button_hint="@string/hint_car_model" />


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/fragment_search_tvEngine"
        style="@style/StyleTextViewLabelSearchType"
        android:text="@string/label_engine_type" />

    <animation.indianic.com.kotlinmaster.customcomponents.CustomDropdownButton
        android:id="@+id/fragment_search_bvEngineType"
        style="@style/StyleTextViewSearchBtnDropdown"
        app:button_hint="@string/hint_engine_type" />


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/fragment_search_tvPrice"
        style="@style/StyleTextViewLabelSearchType"
        android:text="@string/label_price" />

