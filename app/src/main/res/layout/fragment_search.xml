    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/fragment_search_tvPriceMin"
            style="@style/StyleTextViewLabelSearchType"
            android:layout_width="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/dimen_25dp"
            android:paddingStart="0dp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/fragment_search_tvPriceMax"
            style="@style/StyleTextViewLabelSearchType"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dimen_25dp"
            android:paddingStart="0dp" />

    </RelativeLayout>

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/fragment_search_ibSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:background="@null"
        android:src="@drawable/ic_btn_search" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:weightSum="1">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/fragment_search_bvCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:background="@null"
            android:fontFamily="@font/muli"
            android:text="@string/label_cancel"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_15sp" />

    </LinearLayout>

</LinearLayout>