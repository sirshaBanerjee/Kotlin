<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorCommonwhiteBg"
    android:orientation="vertical"
    android:padding="@dimen/dimen_5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_10dp">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/fragment_select_brand_tvSelectBrand"
                style="@style/StylePageHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/label_select_brand"
                tools:ignore="RelativeOverlap" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/fragment_select_brand_tvCancel"
                style="@style/StyleTextViewGreySmall"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="@string/label_cancel" />

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_select_brand_rvBrandNames"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_5dp" />

    </LinearLayout>

</LinearLayout>