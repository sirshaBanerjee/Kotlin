<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/row_my_order_cvParent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    card_view:cardCornerRadius="@dimen/dimen_2dp">

    <LinearLayout
        android:id="@+id/row_my_order_llMyOrderParent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/dimen_10dp"
            android:paddingStart="@dimen/dimen_10dp">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/fragment_order_details_tvOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:fontFamily="@font/muli"
                android:text="@string/label_order"
                android:textSize="@dimen/font_13sp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/row_my_order_tvOrderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:layout_toEndOf="@id/fragment_order_details_tvOrder"
                android:fontFamily="@font/muli"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/font_13sp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/row_my_order_tvOrderDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:layout_toEndOf="@id/row_my_order_tvOrderId"
                android:fontFamily="@font/muli"
                android:gravity="end"
                android:textSize="@dimen/font_13sp" />
        </RelativeLayout>

        <View
            android:id="@+id/row_address_viewSeparator"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:background="@color/colorHintGrey" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_10dp">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/row_my_order_tvOrderStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/muli"
                android:textColor="@color/colorProductTransit"
                android:textSize="@dimen/font_13sp" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/muli"
                android:text="@string/label_track_order"
                android:textColor="@color/colorPageHeader"
                android:textSize="@dimen/font_13sp" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>